<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_size_small"

    >

    <com.google.android.youtube.player.YouTubeThumbnailView
        android:id="@+id/thumbnailview_videolist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_size_large"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"

        >

    </com.google.android.youtube.player.YouTubeThumbnailView>


    <TextView

        android:id="@+id/textView_title_video_listitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/padding_size_large"
        android:background="@color/colorAccent"
        android:text="INSANE HULK"
        android:textStyle="bold" />


</FrameLayout>